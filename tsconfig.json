{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "preserve",
    "jsxFactory": "_jsx",
    "jsxFragmentFactory": "Fragment",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "importHelpers": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {},
    "types": ["packages/setsuna/jsx.d.ts"]
  },
  "include": [
    "packages/*/src"
  ]
}